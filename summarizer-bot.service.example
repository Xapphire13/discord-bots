[Unit]
Description=Discord Summarizer Bot
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=<YOUR_USER>
WorkingDirectory=/home/<YOUR_USER>/summarizer-bot
ExecStart=/home/<YOUR_USER>/summarizer-bot/summarizer-bot
Restart=on-failure
RestartSec=5
EnvironmentFile=/home/<YOUR_USER>/summarizer-bot/.env

[Install]
WantedBy=multi-user.target
